    <body>
        <div class="search-container">
            <div class="actions">
                <a href="/add">
                    <button type="button" class="add-member-btn">MEMBERS DUE TODAY</button>
                </a>
                <a href="/viewmemsub">
                    <button type="button" class="add-member-btn">VIEW MEMBER SUBSCRIPTIONS</button>
                </a>
                <form action="/search" method="GET" class="search-input">
                    <input type="text" placeholder="Search here..." name="search">
                    <button type="submit" class="search-btn">
                    <i class="fa fa-search"></i>
                    </button>
                </form>
            </div>
        </div>
        <div class="container">
            <div class="form-container  contain">
                <form action="/register/submit" method="POST">
                    <h1>ADD SUBSCRIPTION</h1>
                    <input type="text" id="fname" name="firstname" placeholder="Subscription Name" required><br>
                    <input type="text" id="lname" name="lastname" placeholder="Duration" required><br>
                    <input type="number" id="email" name="email" placeholder="Price" required><br>           
                    <div class="contain">
                        <button type="submit">Save</button>
                        <button type="button">Cancel</button>
                        </div>
                </form>
            </div>
            <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Subscription</th>
                        <th>Duration</th>
                        <th>Price</th>
                        <th>Active</th>
                        <th>Control</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td class="control-buttons">
                            <a href="#"><i class="fa fa-edit"></i></a>
                        </td>
                    </tr>
                </tbody>
            </table>
            </div>
        </div>
    </body>
</html>