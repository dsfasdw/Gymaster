    <body>
        <div class="container">
            <div class="form-container  contain">
                <form action="/register/submit" method="POST">
                    <h1>EDIT USER</h1>
                    <label for="active">Active</label>   
                    <input type="radio" id="active" name="active" class="active-radio">
                    <input type="text" id="fname" name="firstame" placeholder="Subscription" required><br>
                    <input type="text" id="lname" name="lastame" placeholder="Start Date (YYYY-MM-DD)" required><br>                    
